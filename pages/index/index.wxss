/**index.wxss**/
.header{
  border: 1px #ccc solid;
  margin: 10px;
  border-radius: 5px;
  padding: 5px;
  display: flex;
  box-shadow: 1px 1px 5px lightgrey;
}
.searchInput{
margin-left:5px ;
flex-grow: 1;
display: flex;



}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
}

.noroles{
  padding-top: 20px;
  padding-bottom: 20px;
  margin-top : 20px ;
  margin-bottom : 20px ;
  display: flex;justify-content: center;
  font-size: 120%;
  font-weight: 700;
  color: lightgray

}
.counter{
    margin-top : 10px ;
  margin-bottom : 10px ;
  display: flex;justify-content: center;
  font-size: 85%;
  font-weight: 700;
  color: lightgray
}
.container1 {
  margin-top:10px; 
  border-top: 1px solid #ccc;
}

.img {
  flex-shrink:0;
  width: 50px;
  height: 50px;
  border-radius: 5px;
  box-shadow: 2px 2px 5px lightgrey;
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden;
}

.content {
  display: flex;
  align-items:center;
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  font-family:Arial, Helvetica, sans-serif;
}

.inputbox {
  margin-left: auto;
  margin-right: auto;
}

.gameid {
  flex-basis:40%;
  font-size:  larger;
  font-weight:bold;
}
.tag{
  color:green;
  font-weight:  800;
  font-size:   larger
}
.fulltag{

  color:lightgray;
  font-weight:  800;
  font-size:   larger
}

.complete {
  background-color: green;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content, .touch-move-active .complete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.addbox {
  border: 1px solid;
  border-radius: 5px;
  border-color: lightgrey;
  box-shadow: 1px 1px 5px lightgrey;
  margin: 10px;
  padding: 1%;
}

.picker {
  display: flex;
  align-items: center;
  padding: 1%;
  border-bottom: 1px solid lightgrey;
}

.picker, view {
  margin-left: auto;
  margin-right: auto;
}

.idInput {
  padding: 1%;
  display: flex;
  align-items: center
}
.placeholder{
  font-size:  medium;
  color: lightgrey;
  text-align:unset
  
}

.adder {
  margin: 10px;
  border-radius: 5px;
  box-shadow: 1px 1px 5px lightgrey;
}

.reset {
  margin: 10px;
  border-radius: 5px;
  box-shadow: 1px 1px 5px lightgrey;
}
.rules{
  display: flex;
  margin: 10px;
  justify-content:space-between;
  font-size: small;
  color: grey
}